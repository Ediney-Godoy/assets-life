############################
# Asset Life - Exemplo .env #
############################

# Banco de dados: PostgreSQL
# Forma recomendada: URL completa
# Formato: postgresql+psycopg2://USUARIO:SENHA@HOST:PORTA/NOME_DO_BANCO
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/assetlife

# Alternativa: definir via variáveis (se não usar DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=assetlife
# DB_USER=postgres
# DB_PASSWORD=postgres

# Segurança (JWT)
# Em produção, sempre defina um SECRET_KEY forte
SECRET_KEY=troque-esta-chave-em-producao

# CORS/URLs do frontend
# Domínio público do frontend (ex.: https://assets-life.vercel.app)
FRONTEND_ORIGIN=http://localhost:5175
# Base para links gerados (ex.: reset de senha)
FRONTEND_BASE_URL=http://localhost:5175

# Controle de DDL em runtime (CREATE/ALTER). Use migrações Alembic.
# Em produção, recomendo manter false e aplicar migrações via CI/CD.
ALLOW_DDL=false